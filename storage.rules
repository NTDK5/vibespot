rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Spots images
    match /spots/{spotId}/{allPaths=**} {
      // Only admins can upload spot images
      allow write: if isAdmin();
      // Anyone authenticated can read spot images
      allow read: if isAuthenticated();
    }
    
    // Review images
    match /reviews/{reviewId}/{allPaths=**} {
      // Users can upload their own review images
      allow write: if isAuthenticated() && 
                    resource == null || // Allow create
                    firestore.get(/databases/(default)/documents/reviews/$(reviewId)).data.userId == request.auth.uid;
      // Anyone authenticated can read review images
      allow read: if isAuthenticated();
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

